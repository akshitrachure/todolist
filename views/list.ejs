<%- include("header") -%>
    <div class="box" id="heading">
        <h1><%= listTitle %></h1>
    </div>

    <div class="box">
       <% newItem.forEach(function(item){ %>
        <form action="/delete" method="post">
            <div class="item">
                <input type="checkbox" name="check" value="<%= item._id %>" onchange="this.form.submit()">
                <p><%= item.name %></p>
            </div>
            <input type="hidden" value="<%= listTitle %>" name="listName">
        </form>
               
       <% }) %>

      

        <form class="item" action="/" method="post">
            <input autocomplete="off" type="text" name="item" id="item" placeholder="Enter New Item">
            <button type="submit" name="list" value=<%= listTitle %>>+</button>
        </form>
    </div>    


<%- include("footer") -%>